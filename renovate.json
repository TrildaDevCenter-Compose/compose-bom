{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignoreUnstable": false,
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^androidx.compose"
      ],
      "group": "compose",
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
