{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "description": "Automatically merge version bumps",
      "groupName": "Jetpack Compose",
      "groupSlug": "compose",
      "matchPackagePatterns": [
        "androidx.compose.*"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
